#Variáveis
Nome = "Lucas" # Armazenamento de uma String
Sobrenome = "Alcântara" # Igual anterior
Idade = 21 # Armazenamento de um Número Inteiro
Altura = 1.81 # Armazenamento de um Float (Número Décimal) 
Evangélico = True

# Estrutura Condicional para Resposta Personalizada utilizando a Variável "Evangélico"
if Evangélico: 
    Resposta = "Sim" # Óbvio meu patrão
else:
    Reposta = "É sim de todo Jeito kkk" # O menino é Crente!

Evangélico = Resposta # Armazenamento de um Valor Booleano (True or False)

#Exibição das Variáveis
print("Nome:", Nome, Sobrenome)
print("Idade:", Idade, "anos") 
print("Altura:", Altura, "cm")
print("Evangélico? ", Evangélico)
# Exibir Strings (Perguntas/Pedidos no caso) e Resposta conforme variável
